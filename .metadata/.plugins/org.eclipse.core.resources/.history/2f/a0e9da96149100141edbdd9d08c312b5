	public ArrayList<String> battle_string(Monster mon)
	{
		ArrayList<String> bs=new ArrayList<String>();
		String[] saber={"劈砍攻擊","衝撞攻擊","踢擊","劍氣縱橫","旋風斬","突刺","破天劍","無極劍","虛空斬"};
		String[] archer={"普通射擊","弓擊","踢擊","爆炸箭","箭雨","穿心箭","暴風神射","黑暗狙擊","射天狼"};
		String[] thief={"背刺","毒襲","踢擊","迴旋斬","毒鏢","隱身襲殺","落葉斬","瞬步襲殺","暗影狂殺"};
		String[] monster={"利爪攻擊","放屁攻擊","嘲諷攻擊","撕咬攻擊","衝撞","記憶體爆炸攻擊","木馬病毒","愛滋病毒","宇宙震盪"};
		int ch_life=Charc.life;
		int mon_life=mon.ShowLife();
		while (true)
		{	
			
			String cs="",ms="";
			int index=(int)(1000*Math.random()%saber.length);
			int index_1=(int)(1000*Math.random()%saber.length);
			int lv_temp=0;
			if (mon.ShowName().compareTo("蓋亞")==0)
				lv_temp=999;
			double atk=a(Charc.ATK,index,Charc.level);
			double matk=a(mon.ShowAttack(),index_1,lv_temp);
			
			cs+=Charc.name+" 對 "+mon.ShowName()+" 施展了 ";
			if (Charc.carceer.compareTo("劍士")==0)
				cs+=b(saber,index,Charc.level);
			else if (Charc.carceer.compareTo("弓箭手")==0)
				cs+=b(archer,index,Charc.level);
			else
				cs+=b(thief,index,Charc.level);
			cs+=" 造成 "+(int)atk+" 點傷害";
			bs.add(cs);
			
			mon_life-=(int)atk;
			
			if (mon_life<=0)
			{
				bs.add(Charc.name+" 贏得了勝利!!!");
				Charc.money+=mon.ShowMoney();
				break;
			}
			ms+=mon.ShowName()+" 對 "+Charc.name+" 施展了";
			ms+=b(monster,index_1,lv_temp);
			ms+="造成 "+matk+" 點傷害";
			bs.add(ms);
			
			ch_life-=matk;
			if (ch_life<=0)
			{
				bs.add("你死亡了!!!");
				break;
			}
		}
		return bs;
	}
	public String b(String[] s,int index,int lv)
	{
		if (lv>=60)
			return s[index];
		if (lv>=25)
			return s[index%6];
		return s[index%3];
	}
	public double a(double atk,int index,int lv)
	{
		if (lv!=0&&lv!=999)
		{
			if (lv<25)
				return atk;
			else if (lv<60)
			{
				if (index%6>2)
					if (index%6==5)
						return 1.5*atk;
					else
						return 1.25*atk;
				else
					return atk;
			}
			else
			{
				if (index>2&&index<5)
					return 1.25*atk;
				else if(index==5)
					return 1.5*atk;
				else if (index==7)
					return 2*atk;
				else if (index>2)
					return 1.5*atk;
				else 
					return atk;		
			}
		}
		else
		{
			if (lv==999)
			{
				if (index==8)
					return atk*2;
				if (index>5)
					return atk*1.3;
				if (index>2)
					return 1.15*atk;
				return atk;
			}
			else
			{
				if (index>5)
					return atk*1.3;
				if (index>2)
					return 1.15*atk;
				return atk;
			}
		}
	}
}
